# Server Configuration
PORT=4000

# QR Token Security
QR_SECRET=demo-secret-key-change-in-production
QR_TTL_SECONDS=60

# Demo Authentication Tokens (replace with proper JWT in production)
ADMIN_JWT=demo-admin-token
DISPLAY_JWT=demo-display-token
USER_JWT=demo-user-token

# CORS (comma-separated origins, or * for all)
WEB_ORIGIN=*

# Allow same QR to be scanned multiple times (for testing)
ALLOW_MULTI_SCAN=true
